@page


<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="UTF-8">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MercantecSampleHub</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <link rel="stylesheet" href="./style.css">

</head>
<body>



    <!-- Section with a gradient background and centered title content -->
    <section id="title" class="gradient-background">
        <div class="px-4 py-5 text-center">
            <!-- Logo image -->
            <img class="d-block mx-auto mb-4" src="/assets/Mercantec-LOGO-bred-sort.png" alt="" width="100" height="100">
            <!-- Main title -->
            <h1 class="display-5 fw-bold text-body-emphasis">Mercantec SampleHub</h1>
            <!-- Subtitle and call-to-action buttons -->
            <div class="col-lg-6 mx-auto">
                <p class="lead mb-4">Join the Community of Creators: Free Music Sample Uploads & Downloads</p>
                <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
                    <!-- Sign up button -->
                    <button type="button" class="btn btn-primary btn-lg px-4 gap-3">Sign up</button>
                    <!-- Login button with redirection -->
                    <button type="button" class="btn btn-outline-secondary btn-lg px-4" onclick="window.location.href='login.html';">Login</button>
                </div>
            </div>
        </div>
    </section>

    <!-- Section containing card components -->
    <section id="cards">
        <div class="container mt-5 mb-5">
            <!-- Row with three columns of cards -->
            <div class="row row-cols-1 row-cols-lg-3 align-items-stretch g-4 py-5">
                <!-- First card -->
                <div class="col">
                    <div class="card card-cover h-100 overflow-hidden text-bg-dark rounded-4 shadow-lg" style="background-image: url('assets/martin-engel-KLFB1AEPLwA-unsplash.jpg'); background-size: cover;" onclick="window.location.href='https://splice.com/sounds/search/samples?filepath=';">
                        <div class="d-flex flex-column h-100 p-5 pb-3 text-white text-shadow-1">
                            <!-- Card title -->
                            <h6 class="pt-5 mt-5 mb-4 display-6 lh-1 fw-bold">Explore sounds</h6>
                        </div>
                    </div>
                </div>

                <!-- Second card -->
                <div class="col">
                    <div class="card card-cover h-100 overflow-hidden text-bg-dark rounded-4 shadow-lg" style="background-image: url('assets/techivation-I4IgWUTOSGI-unsplash.jpg'); background-size: cover;">
                        <div class="d-flex flex-column h-100 p-5 pb-3 text-white text-shadow-1">
                            <!-- Card title -->
                            <h6 class="pt-5 mt-5 mb-4 display-6 lh-1 fw-bold">Upload loops, one-shots and music-clips</h6>
                        </div>
                    </div>
                </div>

                <!-- Third card -->
                <div class="col">
                    <div class="card card-cover h-100 overflow-hidden text-bg-dark rounded-4 shadow-lg" style="background-image: url('assets/cookie-the-pom-gySMaocSdqs-unsplash.jpg'); background-size: cover;">
                        <div class="d-flex flex-column h-100 p-5 pb-3 text-shadow-1">
                            <!-- Card title -->
                            <h6 class="pt-5 mt-5 mb-4 display-6 lh-1 fw-bold">Join the community</h6>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

   
    <hr />





    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
<style>
    .gradient-background {
    background: radial-gradient(circle, #5c0067 0%, #00d4ff 100%);
    background-size: 180% 180%;
    animation: gradient-animation 18s ease infinite;
}

@@keyframes gradient-animation {
    0% {
        background-position: 0% 50%;
    }

    50% {
        background-position: 100% 50%;
    }

    100% {
        background-position: 0% 50%;
    }
}

.card.card-cover.h-100.overflow-hidden.text-bg-dark.rounded-4.shadow-lg {
    transition: transform 0.3s ease, background-color 0.3s ease, box-shadow 0.3s ease;
}

    .card.card-cover.h-100.overflow-hidden.text-bg-dark.rounded-4.shadow-lg:hover {
        transform: scale(1.05);
        background-color: #444;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.3);
        border-color: #666;
        cursor: pointer;
    }

</style>

                     