@page 

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Upload</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
</head>
<body>
    <div class="container">
        <!-- Heading for the upload section -->
        <h1 class="upload">Upload</h1>

        <!-- Form for uploading audio files and providing related information -->
        <form id="myForm">
            <!-- File input element to allow users to select multiple audio files -->
            <input class="audio form-control" type="file" id="fileInput" multiple accept="audio/*" value="Custom text">

            <!-- Title input field -->
            <label for="title">Title:</label>
            <input type="text" id="title" name="title" required><br><br>

            <!-- Tags input field -->
            <label for="tags">Tags:</label>
            <input type="text" id="tags" name="tags"><br><br>

            <!-- Description text area with a character limit of 254 -->
            <label for="description">Description:</label>
            <textarea maxlength="254" id="description" name="description" class="w-100" required></textarea><br><br>

            <!-- Section for Creative Commons license checkbox -->
            <div class="row cc-box">
                <!-- Checkbox for agreeing to the license -->
                <div class="col-1 text-center">
                    <div class="checkbox-wrapper-24">
                        <input type="checkbox" id="check-24" name="check" value="">
                        <label for="check-24">
                            <span></span>
                        </label>
                    </div>
                </div>
                <!-- Description of the Creative Commons license -->
                <p class="cc col-11">
                    The Attribution-NonCommercial 4.0 International license, abbreviated as CC BY-NC 4.0,
                    is a type of Creative Commons license that allows others to share and adapt your work for non-commercial purposes,
                    as long as they give you credit (attribution). This license does not permit commercial use of the work without prior permission from the copyright holder.
                </p>
            </div>

            <!-- Submit button for the form -->
            <input class="submit" type="submit" value="Submit">
        </form>

        <!-- Row with a button to navigate back to the Index page -->
        <div class="row">
            <div class="col-4"></div>
            <a class="col-4" href="Index"><button class="tilbage">Back</button></a>
            <div class="col-4"></div>
        </div>
    </div>
</body>

</html>


